<% include ../partials/header %>
<div class="container">

    <h1 style="text-align: center;">Add New Comment to <%= camp.name %></h1>
        <div style="width: 33%; margin: 25px auto;">
        <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" placeholder="Comment">
            </div>
            <div class="form-group">
                <input type="text" class="form-control"  name="comment[author]" placeholder="Author">
            </div>
            <div class="form-group d-flex align-items-stretch">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
        </div>

</div>

<% include ../partials/footer %>