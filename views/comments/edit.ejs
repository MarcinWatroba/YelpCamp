<% include ../partials/header %>
<div class="container">

    <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 33%; margin: 25px auto;">
        <form action="/campgrounds/<%= camp_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" name="comment[text]"><%= comment.text %></textarea>
            </div>
            <div class="form-group d-flex align-items-stretch">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%= camp_id %>">Go Back</a>
        </div>

</div>

<% include ../partials/footer %>