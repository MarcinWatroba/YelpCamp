<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <h1>Welcome to YelpCamp</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <a class="btn btn-primary btn-lrg" href="/campgrounds/new">Add New Campground</a>
    </header>
    <div class="row text-center">
    <% camps.forEach((camp) => { %>
        <div class="col-sm-6 col-md-3">
            <section class="card">
                <img src="<%= camp.image %>"  class="card-img-top">
                <div class="card-body">
                    <h4 class="card-title"><%= camp.name %></h4>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                </div>        
            </section>
        </div>
    <% }); %>
    </div>

</div>
<% include ../partials/footer %>