<% include ../partials/header %>
<div class="container">

    <h1 style="text-align: center;">Edit <%= camp.name %></h1>
        <div style="width: 33%; margin: 25px auto;">
        <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" value="<%- camp.name %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control"  name="campground[image]" value="<%- camp.image %>">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="campground[price]" value="<%- camp.price %>" min="0" step="0.01">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="description"><%- camp.description %></textarea>
            </div>
            <div class="form-group d-flex align-items-stretch">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
        </div>

</div>

<% include ../partials/footer %>

