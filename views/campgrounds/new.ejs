<% include ../partials/header %>
<div class="container">

    <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 33%; margin: 25px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" placeholder="Camp Name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control"  name="campground[image]" placeholder="Link to an Image">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="campground[price]" placeholder="Price per Night" min="0" step="0.01">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="campground[description]" placeholder="Description"></textarea>
            </div>
            <div class="form-group d-flex align-items-stretch">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
        </div>

</div>

<% include ../partials/footer %>