<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%= camp.image %>">
                <div class="card-body">
                    <h5 class="float-right">$9.00/night</h5>
                    <h4 class="card-title"><a href=""><%= camp.name %></a></h4>
                    <p class="card-text"><%= camp.description %></p>
                </div>       
            </div>
            <div class="card bg-light my-3">
                <div class="card-body">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new">Add New Comment</a>
                    </div>
                    <hr>
                    <% camp.comments.forEach(comment => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%- comment.author %></strong>
                            <span class="float-right">10 Days Ago</span>
                            <p class="card-text">
                                <%- comment.text %>
                            </p>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
